<Window x:Class="PPH_153P_Configurator.PromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPH_153P_Configurator"
        mc:Ignorable="d"
        Title="PromptWindow" Height="180" 
        Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded" BorderThickness="1,1,1,1" SizeToContent="Manual"
        
        >
    <Grid>
        <TextBlock
            x:Name="MessageTextBlock"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="23"
            FontWeight="DemiBold"
            TextAlignment="Center"
            TextWrapping="Wrap"
            />
    </Grid>
</Window>
